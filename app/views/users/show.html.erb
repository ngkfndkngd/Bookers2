<div class="col-md-8 offset-md-1">
      <h2>Users</h2>
          <table class="table table-hover table-inverse">
          <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
            </thead>
            <tbody>
              <% @book.each do |book| %>
              <tr>
                <td><%= link_to (attachment_image_tag book.user, :profile_image, size:"40x40", format:'jpeg', fallback:"no_image.jpg"), user_path(book.user.id) %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>

