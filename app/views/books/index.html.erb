


       <h2>User info</h2>

        <%= attachment_image_tag @user, :profile_image, size:"100x100", format:'jpeg', fallback:"no_image.jpg" %>
        

        <table class="table">
         <tbody>
            <tr>
	            <th>name</th>
	            <%= @user.name %>
            </tr>
            <tr>
	            <th>introduction</th>
	            <%= @user.introduction %>
            </tr>
            <div class="row">
            <%= link_to  edit_user_path(@user.id) ,class:  "col-xs-12 btn btn-default glyphicon glyphicon-wrench", method: :get do %>
             <i class="fas fa-user-cog"></i>
             <% end %>
            </div>
          </tbody>
        </table>


             <!--form_with部分-->

    <h2>New book</h2>
    <%= form_with model: @book_new, local: true do |f| %>
    <div class="field" >
     <label for=book_title >Title</label>
     <%= f.text_field :title %>
    </div>
    <div class="field" >
     <label for=book_body >Opinion</label>
     <%= f.text_area :body %>
    </div>
    <div class="actions" >
     <%= f.submit 'Create Book' %>
    </div>
    <% end %>


    
      <h2>Books</h2>
      
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
         
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to (attachment_image_tag book.user, :profile_image, size:"40x40", format:'jpeg', fallback:"no_image.jpg"), user_path(book.user.id) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </body>
  