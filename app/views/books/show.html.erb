<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
       <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, size:"100x100", format:'jpeg', fallback:"no_image.jpg" %>
          <table class="table">
             <tbody>
                <tr></tr>
                <tr>
	                 <th>name</th>
	                 <th><%= @user.name %></th>
                </tr>
                <tr>
	                 <th>introduction</th>
	                 <th><%= @user.introduction %></th>
                </tr>
             </tbody>
          </table>
      </div>
      <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@book.user_id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, size:"40x40", format:'jpeg', fallback:"no_image.jpg" %>
                <br>
                   <%= @book.user.name %>
                <% end %>
                </td>
                <td><%= @book.title %></td>
                <td><%= @book.body %></td>
                <% if @book.user.id == current_user.id %>
                <td><%= link_to 'Edit',edit_book_path(@book.id),class: "btn btn-sm btn-success"  %></td>
                <td><%= link_to 'Destroy',book_path, method: :delete,data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-danger" %></td>
                <% end %>
              </tr>
            </tbody>
          </table>
      </div>
    </div>




   <div class="row">
     <div class="col-md-3">
       <%= link_to  edit_user_path(@user.id) ,class: "btn btn-outline-secondary btn-block ", method: :get do %>
         <i class="fas fa-user-cog"></i>
     <% end %>
     </div>
   </div>
   <div class="row">
      <h2 class="mt-3 col-md-3">New book</h2>
    </div>
    <div class="row">
     <div class="col-md-3">

        <%= form_with model: @book_new, local: true do |f| %>
          <div class="form-group">
            <label for="book_title">Title</label>
              <%= f.text_field :title,class: "form-control book_title" %>
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label>
              <%= f.text_area :body,class: "form-control book_body" %>
           </div>
           <div class="form-group">
             <%= f.submit 'Create Book',class: "btn btn-success" %>
           </div>
        <% end %>
     </div>
   </div>
  </div>
 </main>